<%= form_for @user do |f| %>

    <%= f.label :first_name %></br>
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name",
    autofocus: true %></br>

    <%= f.label :last_name %></br>
    <%= f.text_field :last_name %></br>

    <%= f.label :email %></br>
    <%= f.text_field :email %>

    <%= f.submit "Save Your User Info", :class => "btn btn-sunny text-uppercase" %>
  <% end %>