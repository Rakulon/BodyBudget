<%= form_for @user do |f| %>

    <%= f.label :first_name %></br>
    <%= f.text_field :first_name placeholder: "First Name" autofocus: true %></br>

    <%= f.label :last_name %></br>
    <%= f.text_field :last_name %></br>

    <%= f.label :email %></br>
    <%= f.text_field :email %>

    <%= f.submit <a href="/login">Save user info</a> %>

<% end %>